<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#ffffff"
    tools:context=".ShowAllFields">
    <Button
        android:id="@+id/miscellaneous_show"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshap"
        android:text="Miscellaneous"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/vision"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/realestate_show"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshap"
        android:clickable="false"
        android:textAllCaps="false"
        android:text="Real Estate Projects"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/vision"
        android:textColor="#ffffff"
        android:textSize="20sp"

        />
    <Button
        android:id="@+id/rental_properties_show"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshap"
        android:text="Rental Properties"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/vision"
        android:textSize="20dp" />


</LinearLayout>